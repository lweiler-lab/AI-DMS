<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for processing queue -->
        <record id="sequence_processing_queue" model="ir.sequence">
            <field name="name">Document Processing Queue</field>
            <field name="code">dms.document.processing.queue</field>
            <field name="prefix">DPQ/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Cron job for processing queue (V19: numbercall removed) -->
        <record id="cron_process_document_queue" model="ir.cron">
            <field name="name">DMS: Process AI Classification Queue</field>
            <field name="model_id" ref="model_dms_document_processing_queue"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_queue(limit=10)</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
            <field name="priority">10</field>
        </record>

        <!-- Default AI Classification Service (disabled by default) -->
        <record id="default_ai_service_openai" model="dms.ai.classification.service">
            <field name="name">OpenAI GPT-4 Vision</field>
            <field name="provider">openai</field>
            <field name="model_name">gpt-4o</field>
            <field name="confidence_threshold">0.75</field>
            <field name="auto_tag">True</field>
            <field name="auto_extract">True</field>
            <field name="active">False</field>
        </record>

        <record id="default_ai_service_claude" model="dms.ai.classification.service">
            <field name="name">Anthropic Claude</field>
            <field name="provider">claude</field>
            <field name="model_name">claude-3-5-sonnet-20241022</field>
            <field name="confidence_threshold">0.75</field>
            <field name="auto_tag">True</field>
            <field name="auto_extract">True</field>
            <field name="active">False</field>
        </record>

        <record id="default_ai_service_local" model="dms.ai.classification.service">
            <field name="name">Local Ollama (LLaVA)</field>
            <field name="provider">local</field>
            <field name="api_endpoint">http://localhost:11434/api/generate</field>
            <field name="model_name">llava</field>
            <field name="confidence_threshold">0.70</field>
            <field name="auto_tag">True</field>
            <field name="auto_extract">True</field>
            <field name="active">False</field>
        </record>

        <!-- Default OCR Service -->
        <record id="default_ocr_service_tesseract" model="dms.ocr.extraction.service">
            <field name="name">Tesseract OCR (Local)</field>
            <field name="provider">tesseract</field>
            <field name="languages">deu+eng</field>
            <field name="dpi">300</field>
            <field name="enhance_image">True</field>
            <field name="active">False</field>
        </record>
    </data>
</odoo>
