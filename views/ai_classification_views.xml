<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Classification Service Form View -->
    <record id="view_ai_classification_service_form" model="ir.ui.view">
        <field name="name">dms.ai.classification.service.form</field>
        <field name="model">dms.ai.classification.service</field>
        <field name="arch" type="xml">
            <form string="AI Classification Service">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_ai_classification_log)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-history"
                                context="{'search_default_service_id': active_id}">
                            <field name="documents_processed" widget="statinfo" string="Processed"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Name"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Provider Configuration">
                            <field name="active" invisible="1"/>
                            <field name="provider"/>
                            <field name="api_key" password="True"/>
                            <field name="api_endpoint" invisible="provider not in ['local', 'azure']"/>
                            <field name="model_name"/>
                        </group>
                        <group string="Classification Settings">
                            <field name="confidence_threshold" widget="percentage"/>
                            <field name="auto_tag"/>
                            <field name="auto_extract"/>
                        </group>
                    </group>

                    <group string="Statistics" invisible="documents_processed == 0">
                        <group>
                            <field name="documents_processed"/>
                            <field name="avg_confidence" widget="percentage"/>
                        </group>
                        <group>
                            <field name="last_run"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Provider Help" name="help">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <h4>Provider Configuration Guide</h4>
                                    <p><strong>OpenAI (GPT-4 Vision):</strong></p>
                                    <ul>
                                        <li>API Key: Your OpenAI API key</li>
                                        <li>Model: gpt-4-vision-preview or gpt-4o</li>
                                    </ul>
                                    <p><strong>Anthropic Claude:</strong></p>
                                    <ul>
                                        <li>API Key: Your Anthropic API key</li>
                                        <li>Model: claude-3-sonnet-20240229 or claude-3-opus-20240229</li>
                                    </ul>
                                    <p><strong>Local Model (Ollama):</strong></p>
                                    <ul>
                                        <li>Endpoint: http://localhost:11434/api/generate</li>
                                        <li>Model: llava (for vision capabilities)</li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Classification Service List View -->
    <record id="view_ai_classification_service_list" model="ir.ui.view">
        <field name="name">dms.ai.classification.service.list</field>
        <field name="model">dms.ai.classification.service</field>
        <field name="arch" type="xml">
            <list string="AI Classification Services">
                <field name="name"/>
                <field name="provider"/>
                <field name="model_name"/>
                <field name="confidence_threshold" widget="percentage"/>
                <field name="documents_processed"/>
                <field name="last_run"/>
                <field name="active" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- AI Classification Service Action -->
    <record id="action_ai_classification_service" model="ir.actions.act_window">
        <field name="name">AI Classification Services</field>
        <field name="res_model">dms.ai.classification.service</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure AI Document Classification
            </p>
            <p>
                Set up AI providers (OpenAI, Claude, Azure, or Local) for automatic
                document classification, data extraction, and tagging.
            </p>
        </field>
    </record>

    <!-- AI Classification Log List View -->
    <record id="view_ai_classification_log_list" model="ir.ui.view">
        <field name="name">dms.ai.classification.log.list</field>
        <field name="model">dms.ai.classification.log</field>
        <field name="arch" type="xml">
            <list string="Classification Log" create="0" edit="0">
                <field name="create_date" string="Date"/>
                <field name="document_id"/>
                <field name="service_id"/>
                <field name="document_type"/>
                <field name="confidence" widget="percentage"/>
                <field name="applied" widget="boolean"/>
                <field name="processing_time"/>
                <field name="error_message" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- AI Classification Log Form View -->
    <record id="view_ai_classification_log_form" model="ir.ui.view">
        <field name="name">dms.ai.classification.log.form</field>
        <field name="model">dms.ai.classification.log</field>
        <field name="arch" type="xml">
            <form string="Classification Log" create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="document_id"/>
                            <field name="service_id"/>
                            <field name="document_type"/>
                            <field name="confidence" widget="percentage"/>
                        </group>
                        <group>
                            <field name="applied"/>
                            <field name="processing_time"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <group string="Raw Result" invisible="not classification_result">
                        <field name="classification_result" nolabel="1"/>
                    </group>
                    <group string="Error" invisible="not error_message">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Classification Log Search View -->
    <record id="view_ai_classification_log_search" model="ir.ui.view">
        <field name="name">dms.ai.classification.log.search</field>
        <field name="model">dms.ai.classification.log</field>
        <field name="arch" type="xml">
            <search string="Classification Log">
                <field name="document_id"/>
                <field name="service_id"/>
                <field name="document_type"/>
                <separator/>
                <filter name="filter_applied" string="Applied" domain="[('applied', '=', True)]"/>
                <filter name="filter_errors" string="Errors" domain="[('error_message', '!=', False)]"/>
                <separator/>
                <filter name="filter_high_confidence" string="High Confidence (&gt;80%)"
                        domain="[('confidence', '&gt;=', 0.8)]"/>
                <filter name="filter_low_confidence" string="Low Confidence (&lt;50%)"
                        domain="[('confidence', '&lt;', 0.5)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_service" string="Service" context="{'group_by': 'service_id'}"/>
                    <filter name="group_type" string="Document Type" context="{'group_by': 'document_type'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AI Classification Log Action -->
    <record id="action_ai_classification_log" model="ir.actions.act_window">
        <field name="name">Classification Log</field>
        <field name="res_model">dms.ai.classification.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No classification logs yet
            </p>
            <p>
                Classification results will appear here after documents are processed.
            </p>
        </field>
    </record>
</odoo>
