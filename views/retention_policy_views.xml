<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Retention Policy Form View -->
    <record id="view_retention_policy_form" model="ir.ui.view">
        <field name="name">documents.retention.policy.form</field>
        <field name="model">documents.retention.policy</field>
        <field name="arch" type="xml">
            <form string="Retention Policy">
                <header>
                    <button name="action_check_retention"
                            string="Check Retention"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_documents"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o">
                            <field name="document_count" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-secondary"
                            invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Policy Name"/>
                        </h1>
                    </div>

                    <group>
                        <group name="scope" string="Scope">
                            <field name="document_type"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="folder_ids" widget="many2many_tags"/>
                        </group>
                        <group name="retention" string="Retention Period">
                            <field name="retention_years"/>
                            <field name="retention_months"/>
                            <field name="retention_trigger"/>
                        </group>
                    </group>

                    <group>
                        <group name="action" string="Action">
                            <field name="action"/>
                            <field name="archive_folder_id"
                                   invisible="action != 'archive'"/>
                        </group>
                        <group name="notification" string="Notification">
                            <field name="notify_before_days"/>
                            <field name="notify_user_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Legal Reference" name="legal">
                            <field name="legal_reference" placeholder="e.g., AO ยง147, HGB ยง257"/>
                            <separator string="Notes"/>
                            <field name="notes"/>
                        </page>
                    </notebook>

                    <field name="active" invisible="1"/>
                    <field name="sequence" invisible="1"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Retention Policy List View -->
    <record id="view_retention_policy_list" model="ir.ui.view">
        <field name="name">documents.retention.policy.list</field>
        <field name="model">documents.retention.policy</field>
        <field name="arch" type="xml">
            <list string="Retention Policies">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="retention_years"/>
                <field name="retention_trigger"/>
                <field name="action"/>
                <field name="document_count"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Retention Policy Search View -->
    <record id="view_retention_policy_search" model="ir.ui.view">
        <field name="name">documents.retention.policy.search</field>
        <field name="model">documents.retention.policy</field>
        <field name="arch" type="xml">
            <search string="Search Retention Policies">
                <field name="name"/>
                <field name="legal_reference"/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <filter name="filter_archive_action" string="Archive Action" domain="[('action', '=', 'archive')]"/>
                <filter name="filter_delete_action" string="Delete Action" domain="[('action', '=', 'delete')]"/>
                <filter name="filter_review_action" string="Review Required" domain="[('action', '=', 'review')]"/>
                <filter name="group_action" string="Action" context="{'group_by': 'action'}"/>
                <filter name="group_trigger" string="Trigger" context="{'group_by': 'retention_trigger'}"/>
            </search>
        </field>
    </record>

    <!-- Retention Policy Action -->
    <record id="action_retention_policy" model="ir.actions.act_window">
        <field name="name">Retention Policies</field>
        <field name="res_model">documents.retention.policy</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_retention_policy_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first retention policy
            </p>
            <p>
                Retention policies define how long documents must be kept
                according to German legal requirements (AO, HGB, DSGVO).
            </p>
        </field>
    </record>
</odoo>
